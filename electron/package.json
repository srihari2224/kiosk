{
  "name": "prinit-electron",
  "version": "1.0.0",
  "description": "File Transfer Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "publish": "electron-builder --publish=always"
  },
  "build": {
    "appId": "com.prinit.desktop",
    "productName": "Prinit",
    "directories": {
      "output": "dist"
    },
    "files": [
      "../dist/**/*",
      "main.js",
      "preload.js",
      "node_modules/**/*",
      "storage/**/*",
      "prices.json"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "electron": "^37.2.5",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "electron-updater": "^6.6.2",
    "fs-extra": "^11.3.0",
    "node-printer": "^1.0.4",
    "pdf-lib": "^1.17.1",
    "pdf-to-printer": "^5.6.0",
    "pdfjs-dist": "^5.4.54"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
